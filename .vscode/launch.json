    "version": "0.2.0",
    "configurations": [
        {
            "name": "debugpyr: Cur. File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "debugpy: Package Dir.",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}", 
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}", 
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
            // "purpose": ["debug-test"]
            // "justMyCode": false // to debug worker threads
        }
    ]
}